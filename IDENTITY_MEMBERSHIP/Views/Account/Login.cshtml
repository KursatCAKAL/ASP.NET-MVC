@{
    Layout = null;
}
@using IDENTITY_MEMBERSHIP.Models.AcoountVM
@model LoginVM
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Assets/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Assets/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Assets/Scripts/bootstrap.js"></script>
</head>
<body>
    <div> 
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Giris</h3>
                </div>
                @Html.ValidationSummary()
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="panel-body">

                        <div class="col-md-12">
                            <div class="col-md-4">
                                @Html.LabelFor(x=>x.UserName)
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x=>x.UserName,new {@class="form-control"})@*Class ekleme mantığı html helperlara*@
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top:15px;  margin-bottom:15px;">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.Password)
                            </div>
                            <div class="col-md-8">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })@*Class ekleme mantığı html helperlara*@
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top:15px;  margin-bottom:15px;">
                            <div class="col-md-4">
                                @Html.LabelFor(x => x.RememberMe)
                            </div>
                            <div class="col-md-8"> 
                                @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-control,checkboxsize" })@*Class ekleme mantığı html helperlara*@
                            </div>
                            <style>
                                .checkboxsize{
                                    transform:scale(0.7);
                                }
                            </style>
                        </div>

                        <div class="col-md-12 text-right">
                            @Html.ActionLink("Kayıt Ol","Register","Account",null,new {@class="btn btn-warning"})
                            <button type="submit" class="btn btn-primary" style="margin-right:15px">Giris Yap</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
